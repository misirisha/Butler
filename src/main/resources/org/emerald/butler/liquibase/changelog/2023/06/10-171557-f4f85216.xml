<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="butler">
        <dropForeignKeyConstraint baseTableName="HANDBOOK_CATEGORY" constraintName="FK_HANDBOOKCATEGOR_ON_HANDBOOK"/>
    </changeSet>
    <changeSet id="2" author="butler">
        <addForeignKeyConstraint baseColumnNames="HANDBOOK_ID" baseTableName="HANDBOOK_CATEGORY"
                                 constraintName="FK_HANDBOOKCATEGOR_ON_HANDBOOK" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="HANDBOOK"/>
    </changeSet>
    <changeSet id="3" author="butler">
        <dropForeignKeyConstraint baseTableName="HANDBOOK_ITEM" constraintName="FK_HANDBOOK_ITEM_ON_CATEGORY"/>
    </changeSet>
    <changeSet id="4" author="butler">
        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID" baseTableName="HANDBOOK_ITEM"
                                 constraintName="FK_HANDBOOK_ITEM_ON_CATEGORY" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="HANDBOOK_CATEGORY"/>
    </changeSet>
    <changeSet id="5" author="butler">
        <dropForeignKeyConstraint baseTableName="HANDBOOK" constraintName="FK_HANDBOOK_ON_CHAT"/>
    </changeSet>
    <changeSet id="6" author="butler">
        <addForeignKeyConstraint baseColumnNames="CHAT_ID" baseTableName="HANDBOOK" constraintName="FK_HANDBOOK_ON_CHAT"
                                 onDelete="CASCADE" referencedColumnNames="ID" referencedTableName="TelegramChat"/>
    </changeSet>
</databaseChangeLog>