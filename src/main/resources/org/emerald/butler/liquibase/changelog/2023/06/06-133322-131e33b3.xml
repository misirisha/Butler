<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="butler">
        <createTable tableName="HANDBOOK">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HANDBOOK"/>
            </column>
            <column name="CHAT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="butler">
        <createTable tableName="HANDBOOK_CATEGORY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HANDBOOK_CATEGORY"/>
            </column>
            <column name="HANDBOOK_ID" type="UUID"/>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="butler">
        <createTable tableName="HANDBOOK_ITEM">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_HANDBOOK_ITEM"/>
            </column>
            <column name="CATEGORY_ID" type="UUID"/>
            <column name="VALUE_" type="VARCHAR(1023)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="butler">
        <addForeignKeyConstraint baseColumnNames="HANDBOOK_ID" baseTableName="HANDBOOK_CATEGORY"
                                 constraintName="FK_HANDBOOKCATEGOR_ON_HANDBOOK" referencedColumnNames="ID"
                                 referencedTableName="HANDBOOK"/>
    </changeSet>
    <changeSet id="5" author="butler">
        <addForeignKeyConstraint baseColumnNames="CATEGORY_ID" baseTableName="HANDBOOK_ITEM"
                                 constraintName="FK_HANDBOOK_ITEM_ON_CATEGORY" referencedColumnNames="ID"
                                 referencedTableName="HANDBOOK_CATEGORY"/>
    </changeSet>
    <changeSet id="6" author="butler">
        <addForeignKeyConstraint baseColumnNames="CHAT_ID" baseTableName="HANDBOOK" constraintName="FK_HANDBOOK_ON_CHAT"
                                 referencedColumnNames="ID" referencedTableName="TelegramChat"/>
    </changeSet>
</databaseChangeLog>